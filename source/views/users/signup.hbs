<div class="signup-form">
    <div class="card">
        <div class="card-header">
            Account register
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Enter the password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="confirm_password" placeholder="Re-enter the password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-signup">SignUp</button>
                </div>
            </form>
        </div>
    </div>
</div>