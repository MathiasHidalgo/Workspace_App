<header class="notes-header">
    <h3>Create a Task</h3>
</header>

<div class="create-note">
    <form action="/notes/new-note" method="POST" class="notes-form">
        <div>
            <input type="text" name="title" placeholder="enter your title task" class="notes-title">
        </div>
        <div>
            <textarea name="description" class="notes-description" placeholder="Description"></textarea>
        </div>
        <div>
            <button class="notes-button" type="submit">Create Task</button>
        </div>
    </form>
</div>