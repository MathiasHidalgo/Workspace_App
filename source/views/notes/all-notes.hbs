<div class="all-notes-container">
    {{#each notes}}
        <div class="all-notes-body">
            <h4>
                {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>{{ description }}</p>
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST" class="form-notes">
                <input type="hidden" name="_method" value="DELETE">
                <button class="all-notes-delete-button" type="submit">Delete</button>
            </form>
        </div>
        {{else}}
            <div class="no-notes">
                <h1>Hello {{user.name}}</h1>
                <b>There are not notes yet</b>
                <a href="/notes/add" class="button">Create One!</a>
            </div>
    {{/each}}

    
</div>
